{
  "$id": "http://tapis.tacc.utexas.edu/CredentialCreateRequest",
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "Schema for a credential create request",
  "additionalProperties": false,

  "type": "object",
  "properties": {
    "system": { "$ref": "Definitions.json#/systemName" },
    "user": { "$ref": "Definitions.json#/userName" },
    "systemType": { "$ref": "Definitions.json#/systemTypeEnum" },
    "accessMethod": { "$ref": "Definitions.json#/accessMethodEnum" },
    "password": { "type":  "string" },
    "privateKey": { "type":  "string" },
    "publicKey": { "type":  "string" },
    "certificate": { "type":  "string" },
    "accessKey": { "type":  "string" },
    "accessSecret": { "type":  "string" }
  },

  "required": [
    "system",
    "user",
    "systemType",
    "accessMethod"
  ]
}
