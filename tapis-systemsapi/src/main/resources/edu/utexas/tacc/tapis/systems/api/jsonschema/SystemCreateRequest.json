{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://tapis.tacc.utexas.edu/SystemCreateRequest",
  "description": "Schema for a system create request",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "description": {
      "type": "string",
      "maxLength": 2048,
      "default": ""
    },
    "owner": {
      "type": "string",
      "minLength": 1,
      "maxLength": 60,
      "default": "${apiUserId}"
    },
    "host": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "available": {
      "type": "boolean",
      "default": true
    },
    "bucketName": {
      "type": "string",
      "maxLength": 63,
      "default": ""
    },
    "rootDir": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1024,
      "default": "/"
    },
    "jobInputDir": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1024,
      "default": "/input"
    },
    "jobOutputDir": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1024,
      "default": "/output"
    },
    "workDir": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1024,
      "default": "/data"
    },
    "scratchDir": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1024,
      "default": "/scratch"
    },
    "effectiveUserId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 60,
      "default": "${apiUserId}"
    },
    "tags": {
      "type": "string",
      "default": "{}"
    },
    "notes": {
      "type": "string",
      "default": "{}"
    },
    "accessCredential": {
      "type": "string",
      "minLength": 1,
      "default": ""
    },
    "accessMechanism": {
      "type": "string",
      "enum": [
        "NONE",
        "ANONYMOUS",
        "SSH_PASSWORD",
        "SSH_KEYS",
        "SSH_CERT"
      ]
    },
    "transferMechanisms": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "SFTP",
          "S3",
          "LOCAL"
        ]
      }
    },
    "port": {
      "type": "integer",
      "default": -1
    },
    "useProxy": {
      "type": "boolean",
      "default": false
    },
    "proxyHost": {
      "type": "string",
      "maxLength": 256,
      "default": ""
    },
    "proxyPort": {
      "type": "integer",
      "default": -1
    }
  },
  "required": [
    "name",
    "host",
    "accessMechanism"
  ]
}
