{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://tapis.tacc.utexas.edu/SystemCreateRequest",
  "description": "Top-level schema for a system create request",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "description": {
      "type": "string",
      "maxLength": 2048,
      "default": ""
    },
    "owner": {
      "type": "string",
      "minLength": 1,
      "maxLength": 60,
      "default": "${apiUserId}"
    },
    "host": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "available": {
      "type": "boolean",
      "default": true
    },
    "bucketName": {
      "type": "string",
      "maxLength": 63,
      "default": ""
    },
    "rootDir": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1024,
      "default": "/"
    },
    "jobInputDir": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1024,
      "default": "/input"
    },
    "jobOutputDir": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1024,
      "default": "/output"
    },
    "workDir": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1024,
      "default": "/data"
    },
    "scratchDir": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1024,
      "default": "/scratch"
    },
    "effectiveUserId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 60,
      "default": "${apiUserId}"
    },
    "commandCredential": {
      "type": "string",
      "minLength": 1,
      "default": ""
    },
    "transferCredential": {
      "type": "string",
      "minLength": 1,
      "default": ""
    },
    "commandProtocol": {
      "type": "object",
      "properties": {
        "mechanism": {
          "type": "string",
          "enum": [
            "NONE",
            "SSH_ANONYMOUS",
            "SSH_PASSWORD",
            "SSH_KEYS",
            "SSH_CERT"
          ]
        },
        "port": {
          "type": "integer",
          "default": -1
        },
        "useProxy": {
          "type": "boolean",
          "default": false
        },
        "proxyHost": {
          "type": "string",
          "maxLength": 256,
          "default": ""
        },
        "proxyPort": {
          "type": "integer",
          "default": -1
        }
      },
      "required": [
        "mechanism"
      ]
    },
    "transferProtocol": {
      "type": "object",
      "properties": {
        "mechanism": {
          "type": "string",
          "enum": [
            "NONE",
            "SFTP",
            "S3",
            "LOCAL"
          ]
        },
        "port": {
          "type": "integer",
          "default": -1
        },
        "useProxy": {
          "type": "boolean",
          "default": false
        },
        "proxyHost": {
          "type": "string",
          "maxLength": 256,
          "default": ""
        },
        "proxyPort": {
          "type": "integer",
          "default": -1
        }
      },
      "required": [
        "mechanism"
      ]
    }
  },
  "required": [
    "name",
    "host",
    "commandProtocol",
    "transferProtocol"
  ]
}
