{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://tapis.tacc.utexas.edu/PermsRequest",
  "description": "Schema for a permissions request - grant or revoke",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "permissions": {
      "type": "array",
      "items": {
        "type": "string",
        "minItems": 1,
        "maxItems": 3,
        "uniqueItems": true,
        "enum": [
          "READ",
          "MODIFY",
          "DELETE",
          "*"
        ]
      }
    }
  },
  "required": [
    "permissions"
  ]
}
