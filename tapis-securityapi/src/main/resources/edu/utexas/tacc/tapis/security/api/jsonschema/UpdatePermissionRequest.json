{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "http://tapis.tacc.utexas.edu/UpdateRoleRequest",
    "description": "Top-level schema for a permission update request",
    "additionalProperties": false,
    "type": "object",
        "properties": {
          "permName": {
            "type": "string"
          },
          "permValue": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
    "anyOf": [
        { "required":
            [ "permName" ] },
        { "required":
            [ "permValue" ] },
        { "required":
            [ "description" ] }
    ]
}


